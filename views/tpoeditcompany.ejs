<!-- partial -->
  

  <main class="container" style="min-width: 380px;min-height: 30vh;">
        <h2 style="margin-bottom: 0rem;">Edit Company Details</h2>
        <form action="/editcompanydetails" method="post">
            <input type="id" name="id" value="" hidden>
            <div class="input-field">
                <label>Company Name:</label>
                <input type="text" name="companyname" id="companyname"
                    placeholder="Enter company name" minlength="1" value="<%= companyname %>" required>
                <div class="underline"></div>
            </div>
            <div class="input-field">
                <label>Job Role:</label>
                <input type="text" name="jobrole" id="jobrole"
                    placeholder="Enter Job Role" minlength="3" value="<%= jobrole %>" required>
                <div class="underline"></div>
            </div>
            <div class="input-field">
                <label>Location:</label>
                <input type="text" name="location" id="location"
                    placeholder="Enter Location" minlength="1" value="<%= location %>" required>
                <div class="underline"></div>
            </div>
            <div class="input-field">
                <label>Salary:</label>
            
                <input type="text" name="salary" id="salary"
                    placeholder="Enter Salary" min="1" minlength="1" value="<%= salary %>" required>
                <div class="underline"></div>
            </div>

            <div class="input-field">
                <label>Eligibility Criteria:</label>
        
                <input type="text" name="eligibility" id="eligibility"
                    placeholder="Enter Eligibility Criteria"  minlength="1" value="<%= eligibility %>" required>
                <div class="underline"></div>
            </div>
            
            
            
            
            <input type="submit" value="Edit Company Details" style="margin-top:20px;">
        </form>

       
    </main>
</body>
</html>
