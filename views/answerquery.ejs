    </ul>
<!-- partial -->
  

  <main class="container" style="min-width: 380px;min-height: 30vh;">
        <h2 style="margin-bottom: 0rem;">Response to Query</h2>
        <form action="/tpoanswerquery" method="post">
            <input type="id" name="id" value="" hidden>
            <div class="input-field">
                <label>Username:</label>
                <input type="text" name="username" id="username"
                    placeholder="Enter Username" value="<%= username %>" minlength="1" required readonly>
                <div class="underline"></div>
            </div>
            <div class="input-field">
                <label>Subject:</label>
                <input type="text" name="subject" id="subject"
                    placeholder="Enter Subject" value="<%= subject %>" required readonly>
                <div class="underline"></div>
            </div>
            <div class="input-field">
                <label>Query:</label>
                <input type="text" name="query" id="query"
                    placeholder="Enter Query"  value="<%= query %>" required readonly>
                <div class="underline"></div>
            </div>
            <div class="input-field">
                <label>Response:</label>
                <input type="text" name="answer" id="answer"
                    placeholder="Enter Response" minlength="1" required>
                <div class="underline"></div>
            </div>
            
            
            
            
            
            <input type="submit" value="Submit Response" style="margin-top:20px;">
        </form>

       
    </main>
</body>
</html>
